@*@model DrinkDotCom.ViewModels.HomeSlidersViewModel

@if (Model != null && Model.SlidersConfigurations != null)
{

var configuration = Model.SlidersConfigurations.FirstOrDefault();


var topHeading = configuration.Value.GetSubstringText("#TH#", "#MH#");
var mainHeading = configuration.Value.GetSubstringText("#MH#", "#PG#");
var paragraph = configuration.Value.GetSubstringText("#PG#", "");

if (!string.IsNullOrEmpty(topHeading))
{
    topHeading = topHeading.Replace("TH#", "");
}
if (!string.IsNullOrEmpty(mainHeading))
{
    mainHeading = mainHeading.Replace("MH#", "");
}
if (!string.IsNullOrEmpty(paragraph))
{
    paragraph = paragraph.Replace("PG#", "");
}

    <section class="hero-banner">
        <div class="container">
            <div class="row no-gutters align-items-center pt-5">
                <div class="col-5 d-none d-sm-block">
                    <div class="hero-banner__img">
                        <img class="img-fluid" src="~/Content/templates/aroma/img/home/hero-banner.png" alt="">
                    </div>
                </div>
                <div class="col-sm-7 col-lg-6 offset-lg-1 pl-4 pl-md-5 pl-lg-0">
                    <div class="hero-banner__content">
                        <h4>
                            @topHeading
                        </h4>
                        <h1>
                            @mainHeading
                        </h1>
                        <p>
                            @paragraph
                        </p>
                        <a class="button button-hero" href="@Url.SearchProducts()">Browse Now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}*@