@model DrinkDotCom.ViewModels.PageViewModel

<div id="demo" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/images/site/banner/banner3.jfif" width="100%" alt="banner">
            <div class="carousel-caption">
                <h2>TheDrinkKiosk</h2>
                <p>Browse all our latest drinks</p>
                <a class="btn btn-large btn-primary" href="@Url.SearchProducts()">Click here to search now</a>
            </div>

        </div>
        <div class="carousel-item">
            <img src="~/Content/images/site/banner/banner6.jfif" alt="banner">
        </div>
        <div class="carousel-item">
            <img src="~/Content/images/site/banner/banner7.jfif" alt="banner">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>

@*@{ Html.RenderAction("HomeSliders", "Home"); }*@

@{ Html.RenderAction("FeaturedProducts", "Products", new { pageSize = 8, isForHomePage = true }); }

<section class="offer">
    <div class="container">
        <div class="row">
            <div class="col-xl-5">
                <div class="offer__content text-center">
                    <h3 class="shdowText">Up To 20% Off on some selected drinks</h3>
                    <h4 class="shdowText">Spring Sale</h4>
                    <h5 class="shdowText">Get exciting discounts. Apply promo 'Spring20'</h5>
                    <a class="button button--active mt-3 mt-xl-4" href="@Url.Checkout()">Checkout Now</a>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="col-lg-6">

    @Html.Partial("_MapPage", "Shared")
</div>

@{ Html.RenderAction("RecentProducts", "Products", new { pageSize = 8, isForHomePage = true }); }

